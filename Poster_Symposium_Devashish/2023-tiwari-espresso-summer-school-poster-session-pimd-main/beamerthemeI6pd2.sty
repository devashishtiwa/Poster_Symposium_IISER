\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
      \end{column}
      \begin{column}{.7\paperwidth}
        \vskip3.5cm
        \raggedright
        \usebeamercolor{title in headline}{\color{fg}\VeryHuge{\inserttitle}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\LARGE{\insertauthor}\\[1ex]}
            \usebeamercolor{institute in headline}{\color{fg}\Large{\insertinstitute}}
      \end{column}
      \begin{column}{.25\paperwidth}
        %\vskip8ex
        \vskip1.5cm
        %\topskip0pt
        \vspace*{\fill}
        \raggedleft
        \begin{center}
        \includegraphics[width=0.67\linewidth]{2023-tiwari-espresso-summer-school-poster-session-pimd-main/figures/iiser_logo.png}
        \end{center}
      \end{column}
      \begin{column}{.03\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

